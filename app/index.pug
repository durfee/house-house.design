doctype html
html(lang='en-ca')
    head
        include includes/partials/_head
    
    body.no-js(onload='load();')

        aside(role="presentation")
            include includes/_shapes

        main.a-fade-in.--from-bottom
            section.c-section
                div.c-contain
                    h1.c-title
                        span House House 
                        span is a multidisciplinary studio that helps teams like yours find success through 
                        span design
                        //- include:markdown-it copy/home-masthead.md
                    
                    div.c-text-content(style="color:var(--grey-dark);")
                        include:markdown-it copy/home-intro.md

        footer.a-fade-in.--from-bottom(style='opacity:0;')
            include includes/partials/_footer

script.
    // Remove the `.no-js` class from <body>
    function load() {
        document.body.classList.remove('no-js');
    }
    
    // Define brand colours and define the various shape elements
    var colors = [
        'var(--indigo-dark)', 
        'var(--indigo-light)', 
        'var(--orange-light)',
        'var(--violet-light)',
        'var(--green-light)',
    ], boxes = document.querySelectorAll(".c-shapes__single");
    
    // Apply a random brand colour various elements
    for (i = 0; i < boxes.length; i++) {
        boxes[i].style.color = colors[Math.floor(Math.random() * colors.length)];
    }
